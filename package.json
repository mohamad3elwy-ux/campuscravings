{
  "name": "campus-cravings",
  "version": "1.0.0",
  "description": "A full-stack MERN application for managing food trucks on a university campus. Students can browse food trucks, place orders with 15-minute pickup slots, and track their orders in real-time.",
  "main": "server.js",
  "scripts": {
    "start": "node server-mock.js",
    "server": "node server-mock.js",
    "server-real": "nodemon server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev-real": "concurrently \"npm run server-real\" \"npm run client\"",
    "install-client": "npm install --prefix frontend",
    "build-client": "npm run build --prefix frontend",
    "seed": "node database-setup.js",
    "stop": "powershell -ExecutionPolicy Bypass -File ./stop-servers.ps1",
    "stop-bat": "stop-servers.bat",
    "dev-clean": "npm run stop && timeout /t 2 /nobreak >nul && npm run dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.0.0",
    "morgan": "^1.10.1",
    "nodemon": "^3.1.11",
    "socket.io": "^4.8.1"
  }
}
