<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Campus Cravings - Food Trucks</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
  <nav class="navbar navbar-default navbar-campus">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#mainNav">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/customer/home">
          <img src="/logo.png" alt="Logo" style="height:40px;display:inline-block;margin-right:10px;vertical-align:middle;" onerror="this.style.display='none'">
          Campus Cravings
        </a>
      </div>
      <div class="collapse navbar-collapse" id="mainNav">
        <ul class="nav navbar-nav">
          <li><a href="/customer/home"><span class="glyphicon glyphicon-home"></span> Home</a></li>
          <li class="active"><a href="/customer/trucks"><span class="glyphicon glyphicon-cutlery"></span> Food Trucks</a></li>
          <li><a href="/customer/orders"><span class="glyphicon glyphicon-list-alt"></span> My Orders</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/customer/cart"><span class="glyphicon glyphicon-shopping-cart"></span> Cart <span id="cartCount" class="badge">0</span></a></li>
          <li><a href="#" id="logoutLink"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container" style="padding:30px 15px;">
    <!-- Page Header -->
    <div class="text-center" style="margin-bottom:30px;">
      <h1 style="font-size:36px;color:#1f2937;margin-bottom:10px;">Food Trucks</h1>
      <p style="font-size:18px;color:#6b7280;">Discover amazing food from trucks across campus</p>
    </div>

    <!-- Search & Filter -->
    <div style="background:white;padding:20px;border-radius:12px;box-shadow:0 4px 6px rgba(0,0,0,0.07);margin-bottom:30px;">
      <div class="row">
        <div class="col-md-8">
          <div class="input-group">
            <span class="input-group-addon" style="background:white;border-right:none;"><span class="glyphicon glyphicon-search" style="color:#9ca3af;"></span></span>
            <input type="text" class="form-control" id="searchInput" placeholder="Search trucks or locations..." style="border-left:none;">
          </div>
        </div>
        <div class="col-md-4">
          <select class="form-control" id="filterSelect">
            <option value="all">All Trucks</option>
            <option value="popular">Popular</option>
            <option value="quick">Quick Service</option>
            <option value="highly-rated">Highly Rated</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Loading -->
    <div id="loadingMsg" class="text-center" style="padding:60px 0;">
      <div class="loading-spinner"></div>
      <p style="color:#6b7280;margin-top:15px;">Loading trucks...</p>
    </div>

    <!-- Error -->
    <div id="errorMsg" class="alert alert-danger" style="display:none"></div>

    <!-- No Results -->
    <div id="noResultsMsg" class="text-center" style="display:none;padding:60px 0;">
      <div style="font-size:60px;margin-bottom:15px;">üçΩÔ∏è</div>
      <h3 style="color:#1f2937;margin-bottom:10px;">No food trucks found</h3>
      <p style="color:#6b7280;">Try adjusting your search or filters</p>
    </div>

    <!-- Trucks Grid -->
    <div id="trucksContainer" class="row"></div>
  </div>

  <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <script src="/src/trucks.js"></script>
  <script>$(window).scroll(function(){$('.navbar-campus').toggleClass('scrolled',$(this).scrollTop()>10);});</script>
</body>
</html>
